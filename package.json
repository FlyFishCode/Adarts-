{
    "name": "adarts",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve --mode development --open",
        "build": "vue-cli-service build --mode production",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "@tinymce/tinymce-vue": "^4.0.0",
        "axios": "^0.19.0",
        "core-js": "^3.3.2",
        "echarts": "^4.8.0",
        "element-ui": "^2.13.1",
        "eslint-import-resolver-webpack": "^0.11.1",
        "eslint-plugin-html": "^6.0.0",
        "nprogress": "^0.2.0",
        "tinymce": "^5.6.2",
        "vue": "^2.6.10",
        "vue-i18n": "^8.15.1",
        "vue-router": "^3.1.3",
        "wangeditor": "^4.5.4"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^4.0.0",
        "@vue/cli-plugin-eslint": "^4.0.0",
        "@vue/cli-service": "^4.0.0",
        "@vue/eslint-config-airbnb": "^4.0.0",
        "babel-eslint": "^10.1.0",
        "compression-webpack-plugin": "^4.0.0",
        "eslint": "^5.16.0",
        "eslint-plugin-vue": "^5.0.0",
        "qs": "^6.9.1",
        "vue-template-compiler": "^2.6.10"
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "@vue/airbnb"
        ],
        "rules": {
            "global-require": 0,
            "arrow-parens": "off",
            "globals": {
                "common": true
            },
            "generators": "always",
            "no-restricted-syntax": 0,
            "func-names": [
                "error",
                "always"
            ],
            "prefer-destructuring": [
                "error",
                {
                    "object": false,
                    "array": false
                }
            ],
            "semi": [
                2,
                "always"
            ],
            "no-tabs": "off",
            "no-console": "off",
            "no-debugger": "off",
            "vue/no-unused-components": [
                "error",
                {
                    "ignoreWhenBindingPresent": true
                }
            ],
            "vue/no-parsing-error": [
                2,
                {
                    "x-invalid-end-tag": false
                }
            ],
            "linebreak-style": [
                0,
                "error",
                "windows"
            ],
            "quotes": [
                1,
                "single"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "semi-style": [
                "error",
                "last"
            ],
            "extends": "eslint:recommended",
            "max-len": [
                "error",
                {
                    "code": 500
                }
            ],
            "indent": [
                1,
                2
            ],
            "func-call-spacing": "off",
            "treatUndefinedAsUnspecified": 0,
            "import/no-extraneous-dependencies": [
                2,
                {
                    "devDependencies": true
                }
            ],
            "import/extensions": [
                "error",
                "always",
                {
                    "js": "never",
                    "vue": "never"
                }
            ],
            "import/no-unresolved": [
                2,
                {
                    "ignore": [
                        "antd-mobile"
                    ]
                }
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ]
}
